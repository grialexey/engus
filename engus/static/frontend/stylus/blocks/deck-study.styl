.deck-study {

    &__header {
        margin-bottom: 1rem;
        text-align: center;
        position: relative;

        @media (max-width: 500px) {
            margin-bottom: 1rem;
        }
    }

    &__title {
        font-size: 1.2rem;
        font-weight: bold;
        display: inline;
        line-height: 1.2rem;
    }

    &__completeness {
        position: absolute;
        right: 0;
        line-height: 1.2rem;
        color: #aaa;
        display: inline;
        margin-left: 1rem;
        text-align: right;
        white-space: nowrap;

        &-numbers {
            font-weight: bold;
            color: #888;
        }
    }
}