.registration {
    max-width: 23rem;
    padding: 0 2rem;
    box-sizing: border-box;
    margin: 2rem auto;
    line-height: 1;

    h1 {
        font-size: 1.6rem;
        margin-bottom: 1.5rem;
    }

    p {
        margin: 1.2rem 0;

        &.centered {
            text-align: center;
        }
    }

    a {
        link()
    }

    form {
        margin: 1.5rem 0;

        p {
            margin-top: 0;
        }

        .errorlist {
            color: red;
            margin: 1.5rem 0 0.5rem;
        }

        .helptext {
            display: block;
            color: #999;
            font-size: 15px;

            b {
                color: #777;
                font-weight: bold;
            }
        }

        label {
            display: block;
            margin: 0.7rem 0;
            color: #333;
        }

        input {
            display: block;
            width: calc(100% + 3rem);
            box-sizing: border-box;
            padding: 0 1.5rem;
            margin: 0.5rem -1.5rem;
            height: 3rem;
            line-height: 3rem;
            border-radius: 1.5rem;
            border: 2px solid mainColor(1);
            box-shadow: none;
            outline: none;
        }

        input[type=submit] {
            margin: 2rem -1.5rem;
            font-size: 1.3rem;
            color: #fff;
            background-color: mainColor(1);
            border: none;
            cursor: pointer;

            &:hover {
                opacity: 0.7
            }
        }
    }
}