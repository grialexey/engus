.home {
    margin: 2rem 0 7rem;
    line-height: 1.4;

    &__title {
        font-size: 1.9rem;
        color: mainColor(1);
        margin-bottom: 1.2rem;
        font-weight: bold;
        font-family: 'Philosopher', Helvetica, sans-serif;
        line-height: 1;
    }

    p {
        margin: 0.8rem 0;
    }

    img {
        display: block;
        margin: 1.2rem auto 3rem;
        max-width: 100%;
        height: auto;
    }

    strong {
        font-weight: bold;
    }
}