.home {
    margin: 3rem 0 7rem;
    line-height: 1.5;

    &__title {
        font-size: 1.8rem;
        color: mainColor(1);
        margin-bottom: 2rem;
        font-weight: bold;
        font-family: 'Philosopher', Helvetica, sans-serif;
        line-height: 1.1;
        text-align: center;
    }

    &__engus {
        dislay: block;
        margin-top: 0.5rem;
        font-size: 2.5rem;
    }

    p {
        margin: 1rem 0;
        color: #333;
        font-weight: lighter;
        font-size: 1.2rem;
    }

    h2 {
        font-size: 1.7rem;
        text-align: center;
        font-family: 'Philosopher', Helvetica, sans-serif;
        color: #555;
        margin: 2.5rem 0 1rem;
    }

    img {
        display: block;
        margin: 1.2rem auto 3rem;
        max-width: 100%;
        height: auto;
    }

    strong {
        font-weight: bolder;
        color: #000;
    }
}