.home {
    margin: 2rem 0 7rem;
    line-height: 1.4;

    &__title {
        font-size: 1.7rem;
        color: mainColor(1);
        margin-bottom: 2.5rem;
        font-weight: bold;
        font-family: 'Philosopher', Helvetica, sans-serif;
        line-height: 1.1;
        text-align: center;
    }

    &__engus {
        display: inline-block;
        margin: 0.8rem 0;
        font-size: 2.3rem;
        height: 4rem;
        line-height: 4rem;
        border-radius: 2rem;
        padding: 0 2rem;
        background-color: mainColor(1);
        color: #fff;
    }

    &__description {
        font-size: 1.2rem;
        color: #333;
        padding: 0 2rem;
        margin-bottom: 3.5rem;
        font-family: 'Philosopher', Helvetica, sans-serif;
        text-align: justify;
    }

    &__subtitle {
        color: #777;
        font-size: 1.1rem;
    }

    &__paragraph {
        margin: 0;
        color: #777;
        font-size: 1rem;
        line-height: 1.5;
    }

    &__features {

        &-item {
            margin-top: 3rem;
            padding: 1rem 0;
            border-top: 2px solid #ddd;
            /*border-radius: 2rem;*/
            box-sizing: border-box;

            &:nth-child(1) {
                border-color: confidence2Color(1);
            }

            &:nth-child(2) {
                border-color: confidence1Color(1);
            }

            &:nth-child(3) {
                border-color: confidence3Color(1);
            }

            &:nth-child(4) {
                border-color: confidence4Color(1);
            }

            &:nth-child(5) {
                border-color: confidence5Color(1);
            }

            &:nth-child(6) {
                border-color: confidence2Color(1);
            }

            &:nth-child(7) {
                border-color: confidence1Color(1);
            }
        }
    }

    h2 {
        font-size: 1.4rem;
        color: #000;
        margin: 0 0 1rem;
        line-height: 1.1;
    }

    img {
        display: block;
        margin: 1.2rem auto 0;
        max-width: 100%;
        height: auto;
    }

    strong {
        font-weight: bolder;
        color: #000;
    }
}