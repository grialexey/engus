.home {
    margin: 2.5rem 0 7rem;
    line-height: 1.4;

    &__title {
        font-size: 1.7rem;
        color: mainColor(1);
        margin-bottom: 3rem;
        font-weight: bold;
        font-family: 'Philosopher', Helvetica, sans-serif;
        line-height: 1.1;
        /*text-align: center;*/
        /*border-left: 0.3rem solid mainColor(0.5);*/
        /*padding-left: 1rem;*/
        /*margin-left: -1.3rem;*/
        text-align: center;
    }

    &__engus {
        display: inline-block;
        margin: 0.8rem 0;
        font-size: 2.3rem;
        height: 4rem;
        line-height: 4rem;
        border-radius: 2rem;
        padding: 0 2rem;
        background-color: mainColor(1);
        color: #fff;
    }

    &__subtitle {
        color: #777;
        font-size: 1.1rem;
    }

    &__paragraph {
        margin: 0.8rem 0;
        color: #444;
        font-weight: lighter;
        font-size: 1.1rem;
        line-height: 1.5;
    }

    h2 {
        font-size: 1.8rem;
        /*text-align: center;*/
        font-family: 'Philosopher', Helvetica, sans-serif;
        color: #000;
        margin: 2.5rem 0 0.8rem;
        line-height: 1.1;
    }

    img {
        display: block;
        margin: 1.2rem auto 3rem;
        max-width: 100%;
        height: auto;
    }

    strong {
        font-weight: bolder;
        color: #000;
    }
}