.card {

    &__content {
        /*border: 1px solid #999;*/
        /*border-right-width: 3px;*/
        /*border-bottom-width: 3px;*/
        padding: 0;
        box-sizing: border-box;
        margin: 1rem 0 2rem;

        &.m-confidence1 {
            border-color: confidence1Color(1);
        }

        &.m-confidence2 {
            border-color: confidence2Color(1);
        }

        &.m-confidence3 {
            border-color: confidence3Color(1);
        }

        &.m-confidence4 {
            border-color: confidence4Color(1);
        }

        &.m-confidence5 {
            border-color: confidence5Color(1);
        }
    }

    &__front, &__back {
        display: block;
        padding: 2rem 0;
        text-align: center;
        font-size: 1.2rem;
        line-height: 1.3;

        b {
            font-weight: normal;
            border-bottom: 1px solid #ccc;
        }
    }

    &__front {
        border-bottom: 1px solid #ccc;
    }

    &__back {
        position: relative;

        &-audio {
            display: none;
        }

        &-play-audio-btn {
            position: absolute;
            top: 0.7rem;
            right: 0;
            color: #bbb;
            cursor: pointer;
            font-size: 0.85rem;

            &:hover {
                color: linkColor;
            }
        }

        &-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #fff;
            text-align: center;
            opacity: 1;
            align-items: center;
            justify-content: center;
            z-index: 10;
            display: none;
            box-sizing: border-box;

            &:hover {
                color: red;
            }

            &.m-active {
                display: flex;
            }

            &.m-error {
                color: red;
                opacity: 1;
            }
        }
    }

    &__reveal-answer-btn {
        height: 2.4rem;
        line-height: 2.4rem;
        font-size: 1rem;
        color: #222;
        padding: 0 2rem;
        border-radius: 1.2rem;
        cursor: pointer;
        background-color: #ebebeb;

        &:hover {
            opacity: 0.7;
        }

        &.m-confidence1 {
            background-color: confidence1Color(1);
            color: #fff;
        }

        &.m-confidence2 {
            background-color: confidence2Color(1);
            color: #fff;
        }

        &.m-confidence3 {
            background-color: confidence3Color(1);
            color: #fff;
        }

        &.m-confidence4 {
            background-color: confidence4Color(1);
            color: #fff;
        }

        &.m-confidence5 {
            background-color: confidence5Color(1);
            color: #fff;
        }
    }

    &__confidence {
        display: none;

        &.m-active {

        }

        &-title {
            text-align: center;
            color: #555;
            margin-bottom: 0.7rem;
        }

        &-list {
            display: block;

            &-item {
                width: 18%;
                margin: 0 1%;
                display: inline-block;
                text-align: center;
            }
        }

        &-button {
            display: block;
            width: 100%;
            height: 2.4rem;
            line-height: 2.4rem;
            border-radius: 1.2rem;
            margin: 0 auto;
            background-color: #fff;
            /*padding: 15px 3px 12px;*/
            color: #fff;
            box-sizing: border-box;
            text-align: center;
            cursor: pointer;
            outline: none;
            border: none;
            /*border-top: 1px solid #ddd;*/
            /*border-bottom: 1px solid #ddd;*/
            /*border-left: none;*/
            /*border-right: 1px solid #ddd;*/

            /*&:last-of-type {*/
                /*border-right: 1px solid #ddd;*/
            /*}*/
/**/
            /*&:first-of-type {*/
                /*border-left: 1px solid #ddd;*/
            /*}*/

            &:hover {
                opacity: 0.7;
            }

            &:active, &.m-active {
                opacity: 1;
            }

            &-name {
                font-size: 0.8rem;
                display: block;
                color: #aaa;
                margin-top: 0.3rem;
            }

            &-number {
                display: block;
                font-size: 1.3rem;
                font-weight: bold;
                margin-bottom: 0.2rem;
            }

            &--c1 {
                background-color: confidence1Color(1);
            }

            &--c2 {
                background-color: confidence2Color(1);
            }

            &--c3 {
                background-color: confidence3Color(1);
            }

            &--c4 {
                background-color: confidence4Color(1);
            }

            &--c5 {
                background-color: confidence5Color(1);
            }
        }
    }
}