.card {

    &__content {
        padding: 0;
        box-sizing: border-box;
        margin-bottom: 2rem;

        @media (max-width: 500px) {
            margin-bottom: 1rem;
        }
    }

    &__front, &__back {
        display: block;
        padding: 2rem 1rem;
        text-align: center;
        font-size: 1.2rem;
        line-height: 1.4;

        b {
            font-weight: normal;
            border-bottom: 1px solid #ccc;
        }
    }

    &__front {
        border-bottom: 1px solid #aaa;

        &-image {
            display: block;
            margin: 1.3rem auto 0;
        }
    }

    &__back {
        position: relative;

        &-audio {
            display: none;
        }

        &-play-audio-btn {
            position: absolute;
            top: 0.5rem;
            right: 0;
            color: #aaa;
            cursor: pointer;
            font-size: 0.85rem;

            &:hover {
                color: linkColor;
            }
        }

        &-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #fff;
            text-align: center;
            opacity: 1;
            align-items: center;
            justify-content: center;
            z-index: 10;
            display: none;
            box-sizing: border-box;

            &:hover {
                color: red;
            }

            &.m-active {
                display: flex;
            }

            &.m-error {
                color: red;
                opacity: 1;
            }
        }
    }

    &__reveal-answer-btn {
        height: 2.4rem;
        line-height: 2.4rem;
        font-size: 1rem;
        color: #222;
        padding: 0 2rem;
        border-radius: 1.2rem;
        cursor: pointer;
        background-color: #ebebeb;

        &:hover {
            opacity: 0.7;
        }

        &:active {
            opacity: 1;
            background-color: #e0e0e0;
        }

        &.m-confidence1 {
            background-color: confidence1Color(1);
            color: #fff;
        }

        &.m-confidence2 {
            background-color: confidence2Color(1);
            color: #fff;
        }

        &.m-confidence3 {
            background-color: confidence3Color(1);
            color: #fff;
        }

        &.m-confidence4 {
            background-color: confidence4Color(1);
            color: #fff;
        }

        &.m-confidence5 {
            background-color: confidence5Color(1);
            color: #fff;
        }
    }

    &__confidence {
        display: none;

        &.m-active {

        }

        &-title {
            text-align: center;
            color: #555;
            margin-bottom: 0.7rem;
        }

        &-list {
            display: block;

            &-item {
                width: 18%;
                margin: 0 1%;
                display: inline-block;
                text-align: center;
            }
        }

        &-button {
            display: block;
            width: 100%;
            height: 2.4rem;
            line-height: 2.4rem;
            border-radius: 1.2rem;
            margin: 0 auto;
            background-color: #fff;
            color: #fff;
            box-sizing: border-box;
            text-align: center;
            cursor: pointer;
            outline: none;
            border: none;

            &:hover {
                opacity: 0.7;
            }

            &:active, &.m-active {
                opacity: 1;
            }

            &-name {
                font-size: 0.8rem;
                display: block;
                color: #aaa;
                margin-top: 0.3rem;
            }

            &-number {
                display: block;
                font-size: 1.3rem;
                /*font-weight: bold;*/
                margin-bottom: 0.2rem;
            }

            &--c1 {
                background-color: confidence1Color(1);

                &:active, &.m-active {
                    background-color: confidence1ColorActive(1);
                }
            }

            &--c2 {
                background-color: confidence2Color(1);

                &:active, &.m-active {
                    background-color: confidence2ColorActive(1);
                }
            }

            &--c3 {
                background-color: confidence3Color(1);

                &:active, &.m-active {
                    background-color: confidence3ColorActive(1);
                }
            }

            &--c4 {
                background-color: confidence4Color(1);

                &:active, &.m-active {
                    background-color: confidence4ColorActive(1);
                }
            }

            &--c5 {
                background-color: confidence5Color(1);

                &:active, &.m-active {
                    background-color: confidence5ColorActive(1);
                }
            }
        }
    }
}