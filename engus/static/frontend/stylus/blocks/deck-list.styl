.deck-list {
    margin-top: 2rem;

    &__item {
        width: 250px;
        display: inline-block;
        vertical-align: top;
        margin-bottom: 55px;
        border: 1px solid mainColor(1);
        border-bottom-width: 2px;
        border-right-width: 2px;
        border: none;

        &:nth-child(odd) {
            margin-right: 50px;
        }

        &-link {
            box-sizing: border-box;
            text-align: left;
            color: #000;
            text-decoration: none;
            display: block;
        }

        &-link:hover &-title {
            color: red;
        }

        &-title {
            font-size: 1.5rem;
            line-height: 1.2;
            font-weight: bold;
        }

        &-subtitle {
            font-size: 1.2rem;
            margin-top: 0.2rem;
            line-height: 1.2;
            color: #888;
        }

        &-image-wrapper {
            width: 100%;
            height: 150px;
            position: relative;
            display: block;
            margin-bottom: 1.2rem;
        }

        &-image {
            position: absolute;
            bottom: 0;
            left: 0;
            height: auto;
            max-width: 100%;
            display: block;
        }

        &-cards-count {
            color: #000;
            font-size: 0.85rem;
            margin-top: 0.5rem;

            &-numbers {
                font-weight: bold;
                color: mainColor(1);

                &.m-to-learn {
                    color: #080;
                }
            }

            &.m-done {
                color: #080;
                font-weight: bold;
            }

            &-to-repeat {
                color: mainColor(1);
                /*float: right;*/
            }
        }
    }
}