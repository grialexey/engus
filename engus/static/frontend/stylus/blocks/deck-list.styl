.deck-list {
    margin-top: 2rem;
    text-align: center;

    &__item {
        width: 150px;
        display: inline-block;
        vertical-align: top;
        margin: 0 0.7rem 3rem;

        &-link {
            box-sizing: border-box;
            color: #000;
            text-decoration: none;
            display: block;
            text-align: center;
        }

        &-link:hover &-title {
            /*color: red;*/
        }

        &-link:hover &-image {
            opacity: 0.8;
        }

        &-title {
            font-size: 1rem;
            line-height: 1.2;
            color: linkColor;
            color: #333;
        }

        &-image-wrapper {
            width: 100%;
            height: 100px;
            position: relative;
            display: block;
            margin-bottom: 0.5rem;
        }

        &-image {
            height: auto;
            max-width: 100%;
            display: block;
            margin: 0 auto;
        }

        &-cards-count {
            color: #bbb;
            font-size: 0.85rem;
            margin-top: 0.1rem;

            &.m-done {
                color: #080;
                font-weight: bold;
            }

            &.m-repeat {
                color: #f00;
                font-weight: bold;
            }
        }
    }
}