.deck-list {
    margin-top: 1.5rem;
    text-align: center;

    &__unit-title {
        text-align: center;
        margin-top: 2rem;
        margin-bottom: 2.5rem;

        &-wrapper {
            color: mainColor(1);
            font-size: 1.8rem;
            display: inline-block;
            line-height: 3rem;
            height: 3.4rem;
            border-radius: 1.7rem;
            padding: 0 1.5rem;
            border: 0.2rem solid mainColor(0.3);
            box-sizing: border-box;
        }
    }

    &__item {
        width: 150px;
        display: inline-block;
        vertical-align: top;
        margin: 0 0.7rem 3rem;
        text-align: center;

        &.m-inactive &-title{
            color: #aaa;
        }

        &.m-inactive &-image {
            -webkit-filter: grayscale(100%);
            filter: grayscale(100%);
            opacity: 0.7;
        }

        &-access {
            display: inline-block;
            padding: 0.2rem 0.6rem;
            border-radius: 0.7rem;
            color: #fff;
            /*font-weight: bold;*/
            padding-left: 1.5rem;
            line-height: 1rem;
            margin-top: 0.1rem;
            background: #aaa url(../images/lock-white.png) no-repeat 0.5rem center;
        }

        &-link {
            text-decoration: none;
            display: block;
        }

        &-link:hover &-image {
            opacity: 0.7;
        }

        &-title {
            font-size: 1rem;
            line-height: 1.2;
            color: #333;
        }

        &-image-wrapper {
            width: 100px;
            height: 100px;
            margin: 0 auto;
            position: relative;
            display: block;
            margin-bottom: 0.7rem;
            text-align: center;
        }

        &-image {
            height: auto;
            max-width: 100%;
            display: block;
        }

        &-cards-count {
            margin-top: 0.1rem;
            color: #aaa;
            font-size: 0.85rem;
            line-height: 1rem;
            white-space: nowrap;
            display: block;

            &.m-done {
                color: #080;
                font-weight: bold;
            }

            &.m-repeat {
                color: red;
            }
        }
    }
}