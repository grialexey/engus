.deck-list {
    margin-top: 2rem;

    &__item {
        width: 150px;
        display: inline-block;
        vertical-align: top;
        margin: 0 3rem 3rem 0;

        &-link {
            box-sizing: border-box;
            color: #000;
            text-decoration: none;
            display: block;
            text-align: center;
        }

        &-link:hover &-title {
            color: red;
        }

        &-title {
            font-size: 1.1rem;
            line-height: 1.2;
            color: mainColor(1);
        }

        &-image-wrapper {
            width: 100%;
            height: 100px;
            position: relative;
            display: block;
            margin-bottom: 0.8rem;
        }

        &-image {
            position: absolute;
            bottom: 0;
            left: 0;
            height: auto;
            max-width: 100%;
            display: block;
        }

        &-cards-count {
            color: #777;
            font-size: 0.85rem;
            margin-top: 0.3rem;

            &-numbers {
                font-weight: bold;
                color: mainColor(1);

                &.m-to-learn {
                    color: #080;
                }
            }

            &-to-repeat {
                color: mainColor(1);
                /*float: right;*/

                &.m-done {
                    color: #080;
                    font-weight: bold;
                }
            }
        }
    }
}