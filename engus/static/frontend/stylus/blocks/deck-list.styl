.deck-list {
    /*margin-top: 1rem;*/

    &__unit-title {
        font-size: 1.7rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 2.5rem;
        color: #555;
    }

    &__list {
        text-align: center;
    }

    &__item {
        width: 150px;
        display: inline-block;
        vertical-align: top;
        margin: 0 0.7rem 3rem;

        &-link {
            box-sizing: border-box;
            color: #000;
            text-decoration: none;
            display: block;
            text-align: center;
        }

        &-link:hover &-title {
            /*color: red;*/
        }

        &-link:hover &-image {
            opacity: 0.7;
        }

        &-title {
            font-size: 1rem;
            line-height: 1.2;
            color: linkColor;
            color: #333;
        }

        &-image-wrapper {
            width: 100px;
            height: 100px;
            margin: 0 auto;
            position: relative;
            display: block;
            margin-bottom: 0.7rem;
        }

        &-image {
            height: auto;
            max-width: 100%;
            display: block;
        }

        &-cards-count {
            color: #bbb;
            font-size: 0.85rem;
            margin-top: 0.1rem;

            &.m-done {
                color: #080;
                font-weight: bold;
            }

            &.m-repeat {
                color: red;
                /*font-weight: bold;*/
            }
        }
    }
}